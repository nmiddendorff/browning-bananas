{
  "name": "Browning Bananas Extension",
  "version": "0.1",
  "description": "The extension that helps you visualize when your component was server-side rendered",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./js/content.js"],
      "css": ["./global.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "./img/icon_160.png",
    "32": "./img/icon_160.png",
    "48": "./img/icon_160.png",
    "128": "./img/icon_160.png"
  },
  "manifest_version": 3
}
